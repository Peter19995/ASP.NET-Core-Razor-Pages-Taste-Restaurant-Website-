@page
@model MishiWeb.Pages.Admin.Foodtypes.EditModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary pl-3">Update Food Type</h2>
        </div>
        <input hidden asp-for="FoodType.Id" />
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input asp-for="FoodType.Name" type="text" class="form-control" />
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}