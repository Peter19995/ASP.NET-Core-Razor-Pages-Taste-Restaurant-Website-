@page
@model MapishiYaMishi.Pages.Admin.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <input hidden asp-for="Category.Id" />
        <div asp-validation-summary="All" class="text-danger" >
    
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled type="number" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px">Back To List</a>
    </div>
</form>

