@page
@model MapishiYaMishi.Pages.Admin.Categories.EditModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary pl-3">Edit Category</h2>
        </div>
        <input hidden asp-for="Category.Id" />
        <div asp-validation-summary="All" class="text-danger" >
    
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" type="text" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger" ></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px">Update</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}